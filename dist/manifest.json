{
  "manifest_version": 3,
  "name": "EcoStyle - Sustainable Fashion Assistant",
  "version": "1.0.0",
  "description": "Discover sustainable fashion alternatives and brand transparency while you shop",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "placeholder.svg",
      "48": "placeholder.svg",
      "128": "placeholder.svg"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "placeholder.svg",
    "48": "placeholder.svg",
    "128": "placeholder.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "css": ["content-styles.css"]
    }
  ]
}
